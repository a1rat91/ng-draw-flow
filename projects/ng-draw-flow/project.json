{
    "name": "ng-draw-flow",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "projects/ng-draw-flow/src",
    "prefix": "df",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "project": "projects/ng-draw-flow/package.json",
                "outputPath": "dist/ng-draw-flow",
                "entryFile": "projects/ng-draw-flow/src/index.ts",
                "tsConfig": "projects/ng-draw-flow/tsconfig.lib.json",
                "format": ["esm", "cjs"],
                "compiler": "tsc",
                "external": "all",
                "assets": [
                    {
                        "glob": "projects/ng-draw-flow/README.md",
                        "input": ".",
                        "output": "."
                    }
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/projects/ng-draw-flow"],
            "options": {
                "jestConfig": "projects/ng-draw-flow/jest.config.ts"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "ts-node ./scripts/npm-publish.ts --path ./dist/ng-draw-flow --dry-run {args.dry-run}"
            },
            "dependsOn": [
                {
                    "target": "build",
                    "params": "ignore"
                }
            ]
        }
    }
}
